<h2>サークル一覧</h2>
<%= form_tag(clubs_path,:method => 'get') do %>
  <%= text_field_tag :search, params[:search] ,placeholder: "サークル名で検索" %>
  <%= submit_tag '検索', :name => nil ,class:'btn btn-primary btn-sm'%>
<% end %>
<table class="table">
  <thead>
    <tr>
      <th>サークル名</th>
      <th>種類</th>
      <th>詳細</th>
    </tr>
  </thead>
  <tbody>
    <% @clubs.each do |c|%>
      <tr>
        <td><%= link_to c.name,club_path(c.id) %></td>
        <td><%= c.active %></td>
        <td><%= c.detail %></td>
      </tr>
    <% end %>
  </tbody>
</table>
