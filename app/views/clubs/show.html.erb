<div class="profile">
  <h2 class='text-center'><%= @club.name %>のプロフィール</h2>
  <div class="image">
    <%= image_tag @club.avatar.variant(gravity: :center, resize:"300x300", crop:"300x300+0+0"),id: 'club_image' if @club.avatar.attached?%>
  </div>

  <ul>
    <li><%= @club.active %></li>
    <li><%= @club.intercollege %></li>
    <li><%= @club.university %></li>
    <li><%= @club.sns %></li>
    <li><%= @club.home %></li>
    <li><%= @club.detail %></li>
  </ul>

  <div class="data">
  <ul>
  <li>
  <%= @count_events %>
  <span>イベント投稿数</span>
  </li>
  <li id='count_clubs'>
  <%= @count_clubs %>
  <span>お気に入り数（サークル）</span>
  </li>
  <li>
  1
  <span>お気に入り数（イベント）</span>
  </li>
  </ul>
  </div>
  <div class="club-button">
    <div class="button1">
      <%= link_to 'サークル一覧',clubs_path, class: 'btn btn-primary'%>
    </div>
    <div class="button2">
      <% if club_signed_in? %>
        <% if current_club == @club%>
          <%= link_to 'サークル編集',edit_club_registration_path(@club), class: 'btn btn-success'%>
        <% end %>
      <% end %>
      <% if student_signed_in?%>
        <div id="club_favorite">
          <% if current_student.club_favorite?(@club) %>
            <%= render "unfavorite"%>
          <% else %>
            <%= render "favorite"%>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

