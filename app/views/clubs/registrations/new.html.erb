<div class="container">
  <h2><%= t('.sign_up') %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= bootstrap_devise_error_messages! %>
  <div class="form-group">
    <i class="fas fa-graduation-cap"></i>
    <%= f.label :category_id, '大学(必須)' %>
    <%= f.select :category_id, options_for_select( @category_parent_array.map{|c| [c[:name], c[:id]]}),{include_blank: "選択してください"}, { class: "parent_category_box form-control", id: "parent_category"} %>

  </div>
  <div class="form-group">
    <div class="form-check-inline">
      <%= f.radio_button :active, :文化系,class: 'form-check-input' %>
      <i class="fas fa-pen"></i>
      <%= f.label :active, '文化系',class: 'form-check-label' %>
    </div>
    <div class="form-check-inline">
      <%= f.radio_button :active, :運動系,class: 'form-check-input'%>
      <i class="fas fa-running"></i>
      <%= f.label :active, '運動系',class: 'form-check-label'%>
    </div>
  </div>

  <div class="form-group">
    <i class="fas fa-users"></i>
    <%= f.label :name, '団体名(必須)' %>
    <%= f.text_field :name, class: 'form-control', required: true ,placeholder: '正式名称'%>
  </div>
  <div class="form-group">
    <%= f.label :email,'メールアドレス' %>
    <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password,'パスワード' %>
    <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control' %>

    <% if @minimum_password_length %>
    <small
      class="form-text text-muted"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation,'パスワード確認' %>
    <%= f.password_field :password_confirmation, autocomplete: 'current-password', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit t('.sign_up'), class: 'btn btn-primary btn-block' %>
  </div>
  <% end %>

  <%= render "clubs/shared/links" %>
</div>