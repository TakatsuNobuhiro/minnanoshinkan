<div class="container">
  <h2>サークル編集</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= bootstrap_devise_error_messages! %>

  <div class="form-group">
    <i class="fas fa-users"></i>
    <%= f.label :name, '団体名(必須)' %>
    <%= f.text_field :name, class: 'form-control', required: true %>
  </div>
  <div class="form-group">
    <i class="fas fa-user-circle"></i>
    <%= f.label :avator, '画像' %>
    <%= f.file_field :avatar, accept: "image/jpg,image/jpeg,image/gif,image/png" %>
  </div>

  <div class="form-group">
    <div class="form-check-inline">
      <%= f.radio_button :intercollege, :学内,class: 'form-check-input' %>
      <i class="fas fa-universal-access"></i>
      <%= f.label :intercollege, '学内',class: 'form-check-label' %>
    </div>
    <div class="form-check-inline">
      <%= f.radio_button :intercollege, :インカレ,class: 'form-check-input' %>
      <i class="fas fa-globe"></i>
      <%= f.label :intercollege, 'インカレ',class: 'form-check-label'%>
    </div>
  </div>

  <div class="form-group">
    <i class="fas fa-home"></i></i>
    <%= f.label :home, 'ホームページ' %>
    <%= f.url_field :home, class: 'form-control' %>
  </div>
  <div class="form-group">
    <i class="fas fa-users"></i>
    <%= f.label :sns, 'SNS' %>
    <%= f.url_field :sns, class: 'form-control' %>
  </div>
  <div class="form-group">
    <i class="fas fa-info"></i>
    <%= f.label :detail, '団体紹介' %>
    <%= f.text_area :detail,:size => "60×15", class: 'form-control'%>
  </div>
  <div class="form-group">
    <%= f.submit t('.update'), class: 'btn btn-primary btn-block' %>
  </div>
  <% end %>

  <hr class="devise-link my-5">
  <div class="form-group">
    <%= link_to "トップページ", root_path, class: 'btn btn-info btn-block mb-4' %>
    <%= link_to t('.cancel_my_account'), registration_path(resource_name), data: {confirm: t('.are_you_sure')}, method: :delete, class: 'btn btn-danger btn-block' %>
  </div>
</div>