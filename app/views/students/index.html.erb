<h2>生徒一覧</h2>

<table class="table">
  <thead>
    <tr>
      <th>生徒名</th>
      <th>性別</th>
      <th>趣味</th>
    </tr>
  </thead>
  <tbody>
    <% @students.each do |s|%>
      <tr>
        <td><%= link_to s.name,students_show_path(s.id) %></td>
        <td><%= s.gender %></td>
        <td><%= s.hobby %></td>
      </tr>
    <% end %>
  </tbody>
</table>


