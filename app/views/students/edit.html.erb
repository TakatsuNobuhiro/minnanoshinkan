<div class="text-center">
  <h2>プロフィール編集</h2>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">

    <%= form_with(model: @student, local: true) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      <div class="form-group">
        <%= f.label :name, 'ニックネーム' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :age, '年齢' %>
        <%= f.text_field :age, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :university, '大学' %>
        <%= f.text_field :attribute :university, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :department, '学部' %>
        <%= f.text_field :attribute :department, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :hobby, '趣味' %>
        <%= f.text_field :attribute :hobby, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :detail, '自己紹介' %>
        <%= f.text_area :detail, class: 'form-control' %>
      </div>

      <%= f.submit '編集完了', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>