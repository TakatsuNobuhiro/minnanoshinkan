<div class="container">
  <%= form_with(model: @event, local: true) do |f| %>
  <div class="form-group">
    <%= f.label :title, '名前(必須)' %>
    <%= f.text_field :title, class: 'form-control', required: true %>
  </div>
  <div class="form-group">
    <%= f.label :start, '開始日時(必須)' %>
    <%= f.datetime_field :start, class: 'form-control', required: true %>
  </div>
  <div class="form-group">
    <%= f.label :end, '終了日時(必須)' %>
    <%= f.datetime_field :end, class: 'form-control', required: true%>
  </div>
  <div class="form-group">
    <%= f.label :address, '場所(任意)' %>
    <%= f.text_field :address, class: 'form-control', required: true %>
  </div>
  <div class="form-group">
    <%= f.text_field :tag_ids,value: @tag_list, class: "form-control", id:'tag_ids',\
      placeholder: "タグをつける。複数つけるには','で区切ってください。" %>
  </div>
  <div class="field">
    <%= f.label :content, 'イベント内容(必須)' %>
    <%= f.rich_text_area :content %>
  </div>
  <%= f.submit '投稿',class: 'btn btn-success btn-block mt-1'%>
  <% end %>
</div>