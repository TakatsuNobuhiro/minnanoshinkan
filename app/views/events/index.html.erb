<div class="event-index">
  <h2 class='text-center'>イベント一覧</h2>
  <div class="event-search-box">
    <%= form_tag(events_path,:method => 'get',remote: true) do %>
    <%= datetime_field_tag :start, params[:start] %>
    <div id='span'>〜</div>
    <%= datetime_field_tag :end, params[:end] %>
    <div class="event-search">
      <%= text_field_tag :search, params[:search] ,placeholder: "キーワード検索" %>
      <%= submit_tag '検索', :name => nil ,class:'btn btn-primary btn-sm'%>
    </div>
    <% end %>
  </div>


  <div id="tagbox">
    <div class='tag'id="tagbox_title">
      タグ一覧
    </div>
    <div id="tag_list">
      <% @tag_lists.each do |t| %>
      <%= link_to t.name, events_path(tag_id: t.id), class: "tag btn btn-primary btn-sm" ,remote: true %>
      <% end %>
    </div>
  </div>
  <div class="events">
    <%= render 'events' %>
  </div>
</div>