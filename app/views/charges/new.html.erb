<%= form_tag charges_path do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <label class="amount">
      <span>500円</span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="クレジットカード決済"
          data-currency="jpy"
          data-locale="ja"
          data-amount="500"
          data-label="購入する"
          data-panel-label="500円を支払う"
          data-name="プレミアム会員"
          data-email=<%= "#{current_club.email}" %>
          data-locale="auto">
  </script>
<% end %>