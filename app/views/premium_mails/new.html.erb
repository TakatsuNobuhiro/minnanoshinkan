<%= form_with(model: @premium_mail, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :title, '件名' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

 <div class="form-group">
   <%= f.label :message, 'お問い合わせ内容' %>
   <%= f.text_area :message, size: '10x10', class: 'form-control' %>
 </div>

  <%= f.submit '送信' %>

<% end %>
