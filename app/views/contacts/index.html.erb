<div class="container">
  <%= form_with url: contacts_path, method: :get, local: true do |f|%>
  <div class="form-group">
    <%= f.label :email, 'メールアドレス' %>
    <%= f.text_field :email, placeholder: "メールアドレス入力", class: 'form-control', required: true %>
  </div>
  <div class="form-group">
    <%= f.label :title, '件名' %>
    <%= f.text_field :title, placeholder: "件名", class: 'form-control', required: true %>
  </div>
  <div class="form-group">
    <%= f.label :content, '本文' %>
    <%= f.text_area :content, placeholder: "本文", class: 'form-control', required: true, size: "20x10" %>
  </div>
  <%= f.submit '送信',class:'btn btn-primary btn-block'%>
  <% end %>
</div>